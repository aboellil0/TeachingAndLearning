@model Register

<h1>Register</h1>

<div>
    <form asp-action="Register">
        <div>
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName"></span>
        </div>
        <div>
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName"></span>
        </div>
        <div>
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label asp-for="PasswordConfirmed"></label>
            <input asp-for="PasswordConfirmed" class="form-control" />
            <span asp-validation-for="PasswordConfirmed"></span>
        </div>
        <div>
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber"></span>
        </div>
        <div class="form-group">
            <label asp-for="Type" class="control-lable"></label>
            @Html.DropDownListFor(m=>m.Type ,Html.GetEnumSelectList<UserType>(),"Type",new { @class = "form-control" })
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <div>
            <input type="submit" value="Create" class="btn-primary mt-3 rounded-pill px-3 py-2" />
        </div>
    </form>
</div>